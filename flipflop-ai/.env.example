# Core Infrastructure
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/flipflop_db
REDIS_URL=redis://localhost:6379

# LLM APIs
OPENAI_API_KEY=your_gpt_api_key_here

# Vector Database (Choose one)
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=flipflop-memories
# OR
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Slack Integration
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_SIGNING_SECRET=
SLACK_BOT_TOKEN=
SLACK_WEBHOOK_URL=

# Notion Integration
NOTION_INTEGRATION_TOKEN=
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=
NOTION_REDIRECT_URI=http://localhost:3000/auth/notion/callback

# Google APIs
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
GMAIL_REFRESH_TOKEN=

# GitHub Integration
GITHUB_ACCESS_TOKEN=
# OR for GitHub App
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRY=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# Extension Communication
EXTENSION_API_KEY=generate_secure_key_for_extension
ALLOWED_EXTENSION_IDS=chrome_extension_id_here

# Mobile App
MOBILE_API_KEY=generate_secure_key_for_mobile

# Monitoring (Optional but recommended)
SENTRY_DSN=

# Email Service (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@yourapp.com

# Storage (for file uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
# OR use local storage
UPLOAD_DIR=./uploads

# Feature Flags
ENABLE_GMAIL_INTEGRATION=false
ENABLE_NOTION_INTEGRATION=true
ENABLE_SLACK_INTEGRATION=true
ENABLE_GITHUB_INTEGRATION=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100